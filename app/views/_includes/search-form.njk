<div class="app-search-form">
  <form>
    {{ govukInput({
      id: "search[species]",
      name: "search[species]",
      label: {
        text: "Search by species",
        isPageHeading: true,
        classes: "govuk-label--s app-search-form__label"
      },
      value: data.search.species
    }) }}

    {{ govukButton({
      text: "Search",
      classes: "app-search-form__button"
    }) }}
  </form>

  {% if data.search.species %}
    <p class="govuk-body govuk-!-margin-top-2 govuk-!-margin-bottom-0">
      <a href="/clear-search" class="govuk-link--no-visited-state">Clear search</a>
    </p>
  {% endif %}

</div>